<div class="client-show center-align">
	   <div class="row">
        <div class="col s12 m12">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= @client.name %></span>
              <p>NIF: <%= @client.nif %></p>
              <p>Direccion: <%= @client.street %> - <%= @client.street_number %></p>
              <p>Ciudad: <%= @client.city %> - CP: <%= @client.postal_code %></p>
              <p>Télefono: <%= @client.phone %></p>
              <p>Email: <%= @client.email %></p>
              <p>Persona de contacto: <%= @client.contact_person %></p>
              <p>Observaciones: <%= @client.observations %></p>
              <p>Metodo de pago por defecto: <%= @client.payment_method %></p>
            </div>
            <div class="card-action">
            <%= link_to 'Eliminar',  @client,  method: :delete, data: { confirm: '¿Estas seguro?' } %>
              <%= link_to('Editar', edit_client_path(@client)) %>
            </div>
          </div>
        </div>
      </div>
</div>

