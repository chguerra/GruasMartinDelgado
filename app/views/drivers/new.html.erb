<div class="new-driver">
	<h2>Crear un conductor</h2>
	<%= form_for @driver do |f| %>
		<%= f.label "Nombre" %>
		<%= f.text_field :name%>
		<br>
		<%= f.label "Telefono" %>
		<%= f.text_field :phone%>
		<br>	
		<%= f.label "Direccion" %>
		<%= f.text_field :address%>
		<br>
		<%= f.label "Email" %>
		<%= f.text_field :email%>
		<br>
		<%= f.submit "Dar de alta" %>
	<% end %>
</div>