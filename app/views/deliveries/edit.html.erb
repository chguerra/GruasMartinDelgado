<div id="delivery-edit">
	<h2>Editando solicitud nº: <%= @delivery.id %></h2>

	<%= form_for [@client, @delivery] do |f| %>
		<%= f.label "Precio" %>
		<%= f.text_field :price, class: 'form-control'%>
		<br>
		<%= f.label "Pago conductor" %>
		<%= f.text_field :driver_price, class: 'form-control'%>
		<br>
		<p>Camion</p>
		<%= f.select(:truck, [['0504 FYH',1], ['7636 DYV',2], ['7007 BJP',3], ['6127 DGD',4], ['4584 FKH',5], ['4605 CTW',6], ['SIN MATRICULA', 7]], {include_blank: "Seleccionar camión"}, {:class => 'browser-default'}) %>
		<br>
		<p>Conductor</p>
		<%= f.select(:driver, [['PEPE',1], ['JESUS',2], ['DAVID',3], ['CARLOS',4], ['TERESA',5], ['ROBERTO',6], ['OTROS', 7]], {include_blank: "Seleccionar camión"}, {:class => 'browser-default'}) %>
		<br>
		<p>Estado</p>
		<%= f.select(:delivery_status, ['PENDIENTE','CARGADO', 'ENTREGADO', 'CANCELADO'], {include_blank: "Seleccionar camión"}, {:class => 'browser-default'}) %>
  		<%= f.submit "Guardar cambios" %>
  	<% end %>
</div>